{
  "name": "@beep/api",
  "version": "1.0.0",
  "description": "GraphQL API for the Beep App",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"nodemon build/index.js\"",
    "db:create": "mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:drop": "mikro-orm schema:drop --run",
    "db:migrate": "mikro-orm migration:up",
    "db:migration:create": "mikro-orm migration:create"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.nussman.us/beep-app/Beep.git"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./build/mikro-orm.config.js"
    ]
  },
  "author": "Banks Nussman",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "@banksnussman/graphql-fields-to-relations": "^2.0.0",
    "@mikro-orm/core": "5.6.1",
    "@mikro-orm/postgresql": "5.6.1",
    "@sentry/integrations": "^7.28.1",
    "@sentry/node": "^7.28.1",
    "@sentry/tracing": "^7.28.1",
    "aws-sdk": "^2.1282.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "got": "^11.8.3",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "13.0.0",
    "graphql-ws": "^5.11.2",
    "ioredis": "^5.2.4",
    "js-sha256": "^0.9.0",
    "nodemailer": "^6.8.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "2.0.0-beta.1",
    "uuid": "^9.0.0",
    "wkx": "^0.5.0",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "5.6.1",
    "@mikro-orm/migrations": "5.6.1",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/graphql-upload": "^8.0.5",
    "@types/node": "^18.11.17",
    "@types/nodemailer": "^6.4.7",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "volta": {
    "node": "18.10.0"
  }
}
