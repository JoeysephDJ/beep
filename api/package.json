{
  "name": "@beep/api",
  "version": "1.0.0",
  "description": "GraphQL API for the Beep App",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"nodemon build/index.js\"",
    "db:create": "mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:drop": "mikro-orm schema:drop --run",
    "db:migrate": "mikro-orm migration:up",
    "db:migration:create": "mikro-orm migration:create"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.nussman.us/beep-app/Beep.git"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./build/mikro-orm.config.js"
    ]
  },
  "author": "Banks Nussman",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "^8.5.1",
    "@mikro-orm/core": "^5.2.4",
    "@mikro-orm/postgresql": "^5.2.4",
    "@sentry/integrations": "^7.8.0",
    "@sentry/node": "^7.8.0",
    "@sentry/tracing": "^7.8.0",
    "apollo-server-core": "^3.10.0",
    "apollo-server-express": "^3.10.0",
    "aws-sdk": "^2.1185.0",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "got": "^11.8.3",
    "graphql": "^15.6.1",
    "graphql-fields-to-relations": "^1.0.5",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^12.0.0",
    "graphql-ws": "^5.9.1",
    "ioredis": "^5.1.0",
    "js-sha256": "^0.9.0",
    "nodemailer": "^6.7.7",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "uuid": "^8.3.2",
    "wkx": "^0.5.0",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.2.4",
    "@mikro-orm/migrations": "^5.2.4",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.13",
    "@types/graphql-upload": "^8.0.5",
    "@types/node": "^18.6.2",
    "@types/nodemailer": "^6.4.2",
    "@types/uuid": "^8.3.3",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
