{
  "name": "@beep/monorepo",
  "repository": "git@gitlab.nussman.us:beep-app/Beep.git",
  "author": "Banks Nussman",
  "workspaces": {
    "packages": [
      "./*"
    ]
  },
  "scripts": {
    "clean": "rm -rf node-modules/ && rm -rf app/node_modules/ && rm -rf website/node_modules && rm pnpm-lock.yaml",
    "build:api": "pnpm --filter @beep/api build",
    "build:website": "pnpm --filter @beep/website build",
    "build": "pnpm build:api",
    "dev": "concurrently -n app,api,website -c blue,magenta,green \"pnpm --filter @beep/app web\" \"pnpm --filter @beep/api dev\" \"pnpm --filter @beep/website dev\"",
    "start:app": "pnpm --filter @beep/app start",
    "start:website": "pnpm --filter @beep/website dev",
    "start:api": "pnpm --filter @beep/api start",
    "codegen": "concurrently \"pnpm --filter @beep/app codegen\" \"pnpm --filter @beep/website codegen\""
  },
  "license": "SEE LICENSE IN LICENSE.MD",
  "private": true,
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "resolutions": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  }
}
